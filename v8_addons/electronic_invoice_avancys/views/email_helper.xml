<?xml version='1.0' encoding='utf-8'?>
<openerp>
    <data>
        <record id="electronic_invoice_customer_acknowlegement" model="email.template">
            <field name="name">Envio de factura electr칩nica</field>
            <field name="email_from">${object.company_id.email or ''}</field>
